{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "/dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "assets": [
      "assets"
    ],
    "components": [
      "components"
    ],
    "data": [
      "data"
    ],
    "helpers": [
      "helpers"
    ],
    "hooks": [
      "hooks"
    ],
    "layouts": [
      "layouts"
    ],
    "lib": [
      "lib"
    ],
    "pages": [
      "pages"
    ],
    "store": [
      "store"
    ],
    "styles": [
      "styles"
    ],
    "types": [
      "types"
    ],
    "utils": [
      "utils"
    ]
  }
}
