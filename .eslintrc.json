{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": [
    "cypress",
    "simple-import-sort"
  ],
  "rules": {
    "react/display-name": "off",
    "simple-import-sort/sort": [
      "error",
      {
        "groups": [
          [
            "^react$",
            "^redux$",
            "^@?\\w",
            "^next",
            "^react",
            "^redux",
            "^classnames$",
            "^swr",
            "^\\u0000",
            "^types",
            "^store",
            "^lib",
            "^utils",
            "^helpers",
            "^hooks",
            "^pages",
            "^components",
            "^layouts",
            "^\\.\\.(?!/?$)",
            "^\\.\\./?$",
            "^styles\\/",
            "^.+\\.s?css$"
          ]
        ]
      }
    ]
  }
}
